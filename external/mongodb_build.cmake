include(ExternalProject)

set(MONGODB_SOURCES_DIR ${THIRD_PARTY_PATH}/mongodb)
set(MONGODB_INCLUDE_DIR ${MONGODB_INSTALL_PATH}/include)

set(MONGODB_URL "https://github.com/mongodb/mongo-c-driver/releases/download/1.16.2/mongo-c-driver-1.16.2.tar.gz")

if (ANDROID)
    set(ANDROID_ABI_ARG -DANDROID_ABI=${ANDROID_ABI})
    set(ANDROID_PLATFORM_ARG -DANDROID_PLATFORM=${ANDROID_PLATFORM})
    set(ANDROID_NDK_ARG -DANDROID_NDK=${ANDROID_NDK})
    set(ANDROID_TOOLCHAIN_FILE_ARG -DCMAKE_TOOLCHAIN_FILE=${CMAKE_TOOLCHAIN_FILE})
endif()

ExternalProject_Add(
        extern_mongodb
        URL ${MONGODB_URL}
        PREFIX ${MONGODB_SOURCES_DIR}
        UPDATE_COMMAND ""
        CMAKE_ARGS
        ${ANDROID_ABI_ARG}
        ${ANDROID_PLATFORM_ARG}
        ${ANDROID_NDK_ARG}
        ${ANDROID_TOOLCHAIN_FILE_ARG}
        -DCMAKE_CXX_STANDARD=${CMAKE_CXX_STANDARD}
        -DCMAKE_INSTALL_PREFIX=${MONGODB_INSTALL_PATH}
        -DCMAKE_POSITION_INDEPENDENT_CODE=ON
        -DCMAKE_BUILD_TYPE=${THIRD_PARTY_BUILD_TYPE}
        -DENABLE_TESTS=OFF
        -DNABLE_EXAMPLES=OFF
        CMAKE_CACHE_ARGS -DCMAKE_INSTALL_PREFIX:PATH=${MONGODB_INSTALL_PATH}
        -DCMAKE_POSITION_INDEPENDENT_CODE:BOOL=ON
        -DCMAKE_BUILD_TYPE:STRING=${THIRD_PARTY_BUILD_TYPE}
        BUILD_ALWAYS FALSE
)


if (MONGODB_USE_STATIC)
    set(SHARED_OR_STATIC "STATIC")
    set(LIB_SUFFIX ${CMAKE_STATIC_LIBRARY_SUFFIX})
    set(MONGODB_LIBRARY "${MONGODB_INSTALL_PATH}/lib/libmongoc-static-1.0.a" CACHE FILEPATH "MONGODB_LIBRARY" FORCE)
    set(BSON_LIBRARY "${MONGODB_INSTALL_PATH}/lib/libbson-static-1.0.a" CACHE FILEPATH "BSON_LIBRARY" FORCE)
else ()
    set(SHARED_OR_STATIC "SHARED")
    set(LIB_SUFFIX ${CMAKE_SHARED_LIBRARY_SUFFIX})
    set(MONGODB_LIBRARY "${MONGODB_INSTALL_PATH}/lib/libmongoc-1.0.so" CACHE FILEPATH "MONGODB_LIBRARY" FORCE)
    set(BSON_LIBRARY "${MONGODB_INSTALL_PATH}/lib/libbson-1.0.so" CACHE FILEPATH "BSON_LIBRARY" FORCE)
endif ()



add_library(mongodb ${SHARED_OR_STATIC} IMPORTED GLOBAL)
set_property(TARGET mongodb PROPERTY IMPORTED_LOCATION ${MONGODB_LIBRARY})
add_dependencies(mongodb extern_mongodb)

add_library(bson ${SHARED_OR_STATIC} IMPORTED GLOBAL)
set_property(TARGET bson PROPERTY IMPORTED_LOCATION ${BSON_LIBRARY})
add_dependencies(bson extern_mongodb)

include_directories(${MONGODB_INCLUDE_DIR})
set(MONGODB_INCLUDE_DIRS ${MONGODB_INCLUDE_DIR})
set(MONGODB_LIBRARIES ${MONGODB_LIBRARY})

### restore
set(SHARED_OR_STATIC)
set(LIB_SUFFIX)