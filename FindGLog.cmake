
set(GLOG_INSTALL_DIR ${THIRD_PARTY_INSTALL_PATH}/glog)
set(GLOG_INCLUDE_DIR ${GLOG_INSTALL_DIR}/include)
set(GLOG_LIBRARY_DIR ${GLOG_INSTALL_DIR}/lib)

if (WIN32)
    set(GLOG_LIBRARIE "${GLOG_INSTALL_DIR}/lib/libglog.lib" CACHE FILEPATH "GLOG_LIBRARIES" FORCE)
else ()
    set(GLOG_LIBRARIE "${GLOG_INSTALL_DIR}/lib/libglog.a" CACHE FILEPATH "GLOG_LIBRARIES" FORCE)
endif ()

if (NOT EXISTS ${GLOG_INSTALL_DIR} OR (NOT EXISTS ${GLOG_INCLUDE_DIR}) OR (NOT EXISTS ${GLOG_LIBRARY_DIR}))
    set(GLOG_INSTALL FALSE)
else ()
    set(GLOG_INSTALL TRUE)
endif ()

if (${GLOG_INSTALL})
    add_library(glog STATIC IMPORTED GLOBAL)
    set_property(TARGET glog PROPERTY IMPORTED_LOCATION ${GLOG_LIBRARIE})
    set_property(TARGET glog PROPERTY INTERFACE_INCLUDE_DIRECTORIES ${GLOG_INCLUDE_DIR})
    set(GLog_FOUND TRUE)
    include_directories(${GLOG_INCLUDE_DIR})
else ()
    set(GLog_FOUND FALSE)
endif ()